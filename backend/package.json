{
  "name": "backend",
  "version": "0.2.0",
  "description": "Backend for club webstore",
  "main": "index.js",
  "scripts": {
    "start": "node ./index.js",
    "ts": "ts-node-dev src/index.ts",
    "transpile": "tsc -p tsconfig.json",
    "build": "rm -rf build && cd ../frontend && npm run build --prod && cp -r build ../backend && cd ../frontend && rm -rf build",
    "clean": "rm -rf build",
    "deploy": "cd ../ && git subtree push --prefix backend heroku main",
    "dev": "nodemon index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint ."
  },
  "author": "Ville Manninen",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.10",
    "mongoose-unique-validator": "^3.0.0",
    "save-dev": "0.0.1-security"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.24",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.11.1",
    "eslint": "^8.0.0",
    "nodemon": "^2.0.13",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8"
  }
}
